<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    >

    <LinearLayout
        style="@style/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.imageview.ShapeableImageView
            app:srcCompat="@drawable/avaters"
            android:layout_width="@dimen/sizeAvatar"
            android:layout_height="@dimen/sizeAvatar"
            android:layout_margin="@dimen/spacingMedium"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView" />

        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/spacingMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="@string/nameUser"
                style="@style/nameUserStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="@string/career"
                style="@style/secTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:contentDescription="@string/icon_location"
                    android:layout_height="match_parent"
                    android:src="@drawable/location"
                    app:tint="@color/red_500" />

                <TextView
                    android:text="@string/location"
                    style="@style/FourTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

            <LinearLayout
                android:gravity="start"
                android:layout_marginTop="@dimen/spacingSmall"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:text="@string/reviews"
                    style="@style/defaultTextStyle"
                    android:layout_marginEnd="@dimen/spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:text="@string/rating"
                    style="@style/defaultTextStyle.bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:contentDescription="@string/icon_rating"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/star"
                    app:tint="@color/yellow_600" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacingMedium"
            android:layout_marginEnd="@dimen/spacingSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="@string/hours"
                style="@style/hoursStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="@string/country"
                style="@style/secTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="@string/days_ago"
                style="@style/thriTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>