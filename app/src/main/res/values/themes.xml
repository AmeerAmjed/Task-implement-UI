<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="cardStyle" parent="">
        <item name="android:background">@drawable/shape_card</item>
        <item name="android:layout_marginTop">@dimen/spacingLarge</item>
        <item name="android:layout_marginHorizontal">@dimen/spacingLarge</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radiusShapreCard</item>
    </style>

    <style name="defaultTextStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fontSizeCaption</item>
    </style>

    <style name="nameUserStyle" parent="defaultTextStyle">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textSize">@dimen/fontSizeSubtitle1</item>
    </style>

    <style name="secTextStyle" parent="defaultTextStyle">
        <item name="android:textColor">@color/blueOpacity87</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:layout_marginVertical">@dimen/spacingSmall</item>
    </style>

    <style name="hoursStyle" parent="defaultTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">@dimen/fontSizeCaption</item>
        <item name="android:paddingVertical">@dimen/spacing</item>
        <item name="android:paddingHorizontal">@dimen/spacingSmall</item>
        <item name="android:background">@drawable/shape_hours</item>
    </style>

    <style name="thriTextStyle" parent="defaultTextStyle">
        <item name="android:textColor">@color/blueOpacity38</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="FourTextStyle" parent="defaultTextStyle">
        <item name="android:textColor">@color/grayOpacity60</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
    </style>

    <style name="defaultTextStyle.bold" parent="defaultTextStyle">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing</item>
    </style>

</resources>
